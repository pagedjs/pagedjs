{
  "name": "pagedjs",
  "version": "0.5.0-beta.2",
  "description": "Chunks up a document into paged media flows and applies print styles. A polyfill for CSS Paged Media and Generated Content for Paged Media specifications, enabling professional print-ready PDF generation from HTML and CSS in the browser.",
  "keywords": [
    "paged-media",
    "print",
    "pdf",
    "css-paged-media",
    "pagination",
    "page-layout",
    "print-css",
    "workbook-generation",
    "book-design",
    "typography",
    "css-polyfill",
    "page-breaks",
    "running-headers",
    "page-numbers",
    "footnotes",
    "bleed",
    "crop-marks",
    "print-ready",
    "pdf-generation",
    "w3c-paged-media",
    "css3-paged-media",
    "generated-content",
    "page-counters",
    "margin-boxes",
    "ai-coding",
    "typescript-definitions",
    "design-tokens",
    "design-system",
    "template-library"
  ],
  "author": "Fred Chasen",
  "license": "MIT",
  "homepage": "https://pagedmedia.org",
  "repository": {
    "type": "git",
    "url": "https://gitlab.coko.foundation/pagedjs/pagedjs.git"
  },
  "bugs": {
    "url": "https://gitlab.coko.foundation/pagedjs/pagedjs/issues"
  },
  "main": "src/index.js",
  "browser": "dist/paged.js",
  "type": "module",
  "types": "types/index.d.ts",
  "exports": {
    "import": "./src/index.js",
    "require": "./lib/index.cjs",
    "browser": "./dist/paged.js",
    "polyfill": "./dist/paged.polyfill.js",
    "types": "./types/index.d.ts",
    "default": "./src/index.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "@babel/runtime": "^7.21.0",
    "clear-cut": "^2.0.2",
    "css-tree": "^1.1.3",
    "event-emitter": "^0.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/plugin-proposal-async-generator-functions": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "chalk": "^5.2.0",
    "eslint": "^8.38.0",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-image-snapshot": "^6.1.0",
    "playwright-core": "^1.32.3",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.6",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-serve": "^2.0.2"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -w -c rollup.server.config.js",
    "test": "npm run lint && jest",
    "specs": "npm run pretest && jest --config=specs/jest.config.js",
    "compile": "babel src/ -d lib/ --out-file-extension .cjs",
    "legacy": "babel dist/paged.js --out-file dist/paged.legacy.js && babel dist/paged.polyfill.js --out-file dist/paged.polyfill.legacy.js",
    "pretest": "npm run build && npm run compile",
    "prepublishOnly": "npm run build && npm run compile && npm run legacy",
    "watch": "rollup -w -c",
    "lint": "eslint -c .eslintrc.json src specs",
    "docker-build": "docker build -t pagedmedia/pagedjs .",
    "docker-test": "docker build -t pagedmedia/pagedjs . && docker run -it --rm --ipc=host --user pwuser --security-opt 'seccomp=seccomp.json' -v $(pwd)/specs:/home/pwuser/pagedjs/specs pagedmedia/pagedjs npm test",
    "docker-specs": "docker build -t pagedmedia/pagedjs . && docker run -it --rm --ipc=host -v $(pwd)/specs:/home/pwuser/pagedjs/specs pagedmedia/pagedjs npm run specs",
    "docker-update-specs": "docker build -t pagedmedia/pagedjs . && docker run -it --rm --ipc=host -v $(pwd)/specs:/home/pwuser/pagedjs/specs pagedmedia/pagedjs npm run specs -- -u",
    "validate": "node -e \"const {PageRuleValidator} = require('./src/validation/page-rule-validator.js'); console.log('Validation module loaded successfully');\""
  },
  "files": [
    "dist",
    "lib",
    "src",
    "types",
    "schemas",
    "templates"
  ]
}
